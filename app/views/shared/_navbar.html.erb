<nav class="navbar fixed-top">
  <div class="navbar-brand">

    <%= link_to root_path do %>
    <%= image_tag "logo.png", alt: "alttext", class: "logo navbar-item" %>
    <% end %>
  </div>

  <div class="search-container">

    <%= form_with url: root_path, method: :get, class: "d-flex", style: "max-width: 650px; margin: auto;" do %>
      <%= text_field_tag :query,
            params[:query],
            class: "form-control me-2",
            placeholder: "Search"
        %>
     <button type="submit" class="btn-search"><i class="fa-solid fa-magnifying-glass fa-xl"></i></button>
    <% end %>
  </div>

  <div class="navbar-end">

    <%if user_signed_in?%>
      <%= link_to bookings_path, class: "navbar-item" do %>
      <i class="fa-solid fa-book fa-2xl" style="color:  #540375;"></i>
        <% end%>
      <%= link_to games_path, class: "navbar-item" do %>
      <i class="fa-solid fa-list fa-2xl" style="color: #540375;"></i>
        <% end%>
      <%= link_to destroy_user_session_path, data: {turbo_method: :delete}, class: "navbar-item" do %>
      <i class="fa-solid fa-right-from-bracket fa-flip-horizontal fa-2xl" style="color:  #540375;"></i>
      <% end%>
    <% else%>
     <%= link_to new_user_session_path, class: "navbar-item" do %>
     <i class="fa-solid fa-right-to-bracket fa-2xl" style="color: #540375;"></i>
  <% end%>
  <%end%>
  </div>
</nav>
<div class="spacer mb-3"></div>
