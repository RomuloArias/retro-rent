<p><%= link_to '<Back', root_path, class: "btn backbtn" %></p>
<div class="row m-0 justify-content-center">
  <h2>Games I'm Currently Borrowing</h2>
    <ul>
      <% @bookings.each do |booking| %>
    <div class="card-product">
      <%= image_tag "logo.png"%>
      <div class="card-product-infos">
        <%= booking.game.name %>
        <% if booking.confirmed %>
          <span class="badge bg-success">confirmed</span>
        <% else %>
        <span class="badge bg-warning">pending</span>
        <% end %>
      <li> Price Â£<%= booking.total_price %></li>
      <li>Rental dates: <%= booking.start_date %> - <%= booking.end_date %></li>
      <li> <%= link_to "Edit", edit_booking_path(booking) %> </li>
      <li> <%= link_to "Delete", booking_path(booking) %> </li>
     </div>
    </div>
      <% end %>
    </ul>
</div>
