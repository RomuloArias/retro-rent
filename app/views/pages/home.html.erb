<div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center">
    <h1>Your Retro Dreamland</h1>
    <h3 class="typed-js" data-controller="typed-js"></h3>
  </div>
</div>

<div class="container cards-all">
  <h2 class="title-nw">Newly Added</h2>
  <div class="game-cards p-3">
    <% @games.each do |game| %>
      <%= link_to game_path(game), class: 'card-link' do %>
        <div class="card">
          <img src="https://via.placeholder.com/350x250" class="card-image" alt="Card Image" />
          <div class="card-content m-3">
            <p><%= game.name %></p>
            <p><%= game.console %></p>
            <p>Â£<%= game.price_per_day %>/day</p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
